<!DOCTYPE html>
<html lang="en">
<%- include("./partials/header.ejs") %>

    <body>
        <%- include("./partials/nav.ejs") %>

            <div class="home-page">
                <% if (blogs.length> 0) { %>
                    <% blogs.forEach(blog=> { %>

                        <h3 class="title">
                            <%= blog.title %>
                        </h3>
                        <p class="blog-body">
                            <%= blog.body %>
                        </p>
                        <br>
                        <% }) %>
                            <% } else { %>
                                <p>No content found ;-;</p>
                                <% } %>
            </div>

            <%- include("./partials/footer.ejs") %>
    </body>

</html>